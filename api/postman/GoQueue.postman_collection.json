        },
        {
          "name": "Delete Group",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/groups/{{groupId}}",
              "host": ["{{baseUrl}}"],
              "path": ["groups", "{{groupId}}"]
            },
            "description": "Delete a consumer group"
