          }
        },
        {
          "name": "Publish High Priority",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"messages\": [\n        {\n            \"value\": \"{\\\"alert\\\": \\\"critical system event\\\"}\",\n            \"priority\": \"critical\"\n        }\n    ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/topics/{{topicName}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["topics", "{{topicName}}", "messages"]
            },
            "description": "Publish with priority (critical > high > normal > low > background)"
          }
        },
        {
          "name": "Publish Delayed Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"messages\": [\n        {\n            \"value\": \"{\\\"reminder\\\": \\\"follow up with customer\\\"}\",\n            \"delay\": \"1h\"\n        }\n    ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/topics/{{topicName}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["topics", "{{topicName}}", "messages"]
            },
            "description": "Publish message for future delivery (delay: 30s, 1h, 24h, etc.)"
          }
        },
        {
          "name": "Publish Scheduled Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"messages\": [\n        {\n            \"value\": \"{\\\"event\\\": \\\"scheduled notification\\\"}\",\n            \"deliverAt\": \"2025-02-01T09:00:00Z\"\n        }\n    ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/topics/{{topicName}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["topics", "{{topicName}}", "messages"]
            },
            "description": "Publish message for delivery at specific time (RFC3339)"
          }
        },
        {
          "name": "Publish Batch",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"messages\": [\n        {\n            \"key\": \"user-1\",\n            \"value\": \"{\\\"action\\\": \\\"login\\\"}\"\n        },\n        {\n            \"key\": \"user-2\",\n            \"value\": \"{\\\"action\\\": \\\"purchase\\\"}\",\n            \"priority\": \"high\"\n        },\n        {\n            \"key\": \"user-3\",\n            \"value\": \"{\\\"action\\\": \\\"logout\\\"}\"\n        }\n    ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/topics/{{topicName}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["topics", "{{topicName}}", "messages"]
            },
            "description": "Publish multiple messages in a single request (batch)"
          }
        },
        {
          "name": "Consume Messages (Simple)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/topics/{{topicName}}/partitions/0/messages?offset=0&limit=100",
              "host": ["{{baseUrl}}"],
              "path": ["topics", "{{topicName}}", "partitions", "0", "messages"],
              "query": [
                {
                  "key": "offset",
                  "value": "0",
                  "description": "Starting offset"
                },
                {
                  "key": "limit",
                  "value": "100",
                  "description": "Max messages to return"
                }
              ]
            },
            "description": "Simple message consumption without consumer groups"
          }
        }
      ]
    },
