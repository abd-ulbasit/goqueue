            "body": {
              "mode": "raw",
              "raw": "{\n    \"messages\": [\n        {\n            \"value\": \"{\\\"orderId\\\": \\\"12345\\\", \\\"amount\\\": 99.99}\"\n        }\n    ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/topics/{{topicName}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["topics", "{{topicName}}", "messages"]
