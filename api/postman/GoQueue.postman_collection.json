    {
      "name": "Consumer Groups",
      "item": [
        {
          "name": "List Groups",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/groups",
              "host": ["{{baseUrl}}"],
              "path": ["groups"]
            },
            "description": "List all consumer groups"
          }
        },
        {
          "name": "Join Group",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('memberId', jsonData.member_id);",
                  "    pm.collectionVariables.set('generation', jsonData.generation.toString());",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"client_id\": \"consumer-1\",\n    \"topics\": [\"{{topicName}}\"],\n    \"session_timeout\": \"30s\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/groups/{{groupId}}/join",
              "host": ["{{baseUrl}}"],
              "path": ["groups", "{{groupId}}", "join"]
            },
            "description": "Join a consumer group - saves member_id and generation"
          }
        },
        {
          "name": "Send Heartbeat",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"member_id\": \"{{memberId}}\",\n    \"generation\": {{generation}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/groups/{{groupId}}/heartbeat",
              "host": ["{{baseUrl}}"],
              "path": ["groups", "{{groupId}}", "heartbeat"]
            },
            "description": "Send heartbeat to keep session alive"
          }
        },
        {
          "name": "Poll Messages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/groups/{{groupId}}/poll?member_id={{memberId}}&max_messages=100&timeout=30s",
              "host": ["{{baseUrl}}"],
              "path": ["groups", "{{groupId}}", "poll"],
              "query": [
                {
                  "key": "member_id",
                  "value": "{{memberId}}"
                },
                {
                  "key": "max_messages",
                  "value": "100"
                },
                {
                  "key": "timeout",
                  "value": "30s",
                  "description": "Long-poll timeout"
                }
              ]
            },
            "description": "Long-poll for messages from assigned partitions"
          }
        },
        {
          "name": "Get Group Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/groups/{{groupId}}",
